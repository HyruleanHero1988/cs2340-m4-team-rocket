<!-- Mahmoud Joudeh's build file -->
<!-- mjoudeh3.xml -->
<project name="mjoudeh3" default="all" basedir=".">
    
   <!-- Sets the paths needed for the build file to run -->
   <target name="init" description="Sets the paths needed for the build file to run">
       	<property name="src.dir" value="src"/>
		<property name="lib.dir" value="lib"/>
		<property name="build.dir" value="build"/>
		<property name="classes.dir" value="${build.dir}/classes"/>
		<property name="jar.dir" value="${build.dir}/jar"/>
		<property name="main-class" value="edu.gatech.oad.antlab.pkg1.AntLabMain"/>
		<property name="lib.dir" value="${lib.dir}"/>
		<property name="apidoc" value="apidoc"/>
   </target>
   
   	<path id="classpath">
		<fileset dir="${lib.dir}" includes="**/*.jar"/>
	</path>
   
   <!--most tasks except cleanup depend on prepare and makes necessary directories for the build -->
	<target name="prepare" depends="init">				
		<mkdir dir="${build.dir}"/>
		<mkdir dir="${classes.dir}"/>
		<mkdir dir="${jar.dir}"/>
		<mkdir dir="${apidoc.dir}"/>
	</target>
   
	<!-- This will compile the classes in 'src' directory tree -->
   	<target name="compile" depends="prepare">		
		<javac srcdir="${src.dir}" destdir="${classes.dir}" classpathref="classpath">
		    </javac>
	</target>
   
   	<!--  This prepares the javadoc for the java classes in the 'src' directory -->
   	<target name="javadoc">         
		<javadoc sourcepath="${src.dir}" access="public" destdir="${apidoc.dir}/">
			<bottom>
				<![CDATA[<i>Copyright &#169; 2012 Team Rocket -- CS2340.  All Rights Reserved.</i>]]>
			</bottom>
		
			<classpath>
				<pathelement location="${lib.dir}/resources.jar"/>
			</classpath>
			
		</javadoc>
		
	</target>
   	
   	<!-- This packages compiled classes as a JAR called AntLabRun -->
   	<target name="jar" depends="compile">		
		<jar destfile="${jar.dir}/AntLabRun.jar" basedir="${classes.dir}">
			<manifest>
				<attribute name="Main-Class" value="${main-class}"/>
			</manifest>
		</jar>
	</target>
   	
   <!-- run the application -->
   	<target name="run" depends="jar">
		<java fork="true" classname="${main-class}">
			<classpath>
			    
				<pathelement location="${lib.dir}/resources.jar"/>
				<path location="${jar.dir}/AntLabRun.jar"/>
			
			</classpath>
		</java>
	</target>
   
   <!-- clean up all files generated by the build -->
	<target name="clean">
		<delete dir="${build.dir}"/>
		<delete dir="${apidoc.dir}"/>
	</target>
   
   <!-- run everything except clean -->
   <target name="all" depends="run, javadoc" />

</project>