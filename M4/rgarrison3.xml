<!-- rgarrison3 Build File -->
<!-- rgarrison3.xml -->
	
<project name="rgarrison3" default="all" >
	
		<property  name="src.dir"		value="src"/>
		<property  name="build.dir"		value="build"/>
		<property  name="classes.dir"	value="${build.dir}/classes"/>
		<property  name="jar.dir"		value="${build.dir}/jar"/>
		<!-- <property  name="main-class"    value="${build.dir}.classes.edu.gatech.oad.antlab.pkg1.AntLab11"/>-->
		<property  name="lib.dir"		value="lib"/>
			
		<path id="classpath">
			<fileset dir="${lib.dir}" includes="**/*.jar"/>
		</path>
				
			
		
		<target name="init">
			<mkdir dir="build/classes"/>
		</target>	
			
		<target  name="clean">
			<delete  dir="${build.dir}"/>
		</target>	
		
		<target  name="compile">
			<mkdir dir="${classes.dir}"/>
			<javac  srcdir="${src.dir}"  destdir="${classes.dir}" classpath="${lib.dir}/resources.jar"/>
				<!--<classpath>
					<pathelement location="${lib.dir}/resources.jar"/>
				</classpath>	-->	
		</target>
				
		<target  name="jar"  depends="compile">
			<mkdir  dir="${jar.dir}"/>
			
			<jar  destfile="${jar.dir}/AntLabRun.jar"  basedir="${classes.dir}">
				<!--<include name="edu/gatech/oad/antlab/pkg1/*.class"/>-->
				<manifest>
					<attribute  name="Main-Class"  value="edu.gatech.oad.antlab.pkg1.AntLabMain"/>
					<attribute name="Class-Path" value="resources.jar"/>
				</manifest>
			</jar>		
		</target>
						
    <target name="run" depends="jar">
        <java fork="true" classname="Main-Class">
            <classpath>
                <path refid="classpath"/>
                <path location="${jar.dir}/AntLabRun.jar"/>
            </classpath>
        </java>
    </target>
				
		<target name="all" depends="init,run"/>
			
		<!-- DON'T FORGET JAVADOC METHOD -->	
				
				


</project>
